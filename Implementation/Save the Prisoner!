import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {
    public static void main(String args[]){
		Scanner sys=new Scanner(System.in);
		int total=0,result=0;		
		int tc=sys.nextInt();		
		for(int i=0;i<tc;i++){			
			int prisoner=sys.nextInt();			
			int sweets=sys.nextInt();			
			int start=sys.nextInt();			
			if((sweets+start-1)%prisoner==0)
				result=prisoner;			
			else{
				result=(sweets+start-1)%prisoner;
			}
			System.out.println(result);
		}
		
	}    
}
