#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main(){
    int n,i,j,k,z=1; 
    scanf("%d",&n);
    for(i=2;i<=n+1;i++){
        k=0;
        for(j=1;j<=n-i+1;j++){
            printf(" ");
        }
        while(k!=(((2*i)-1)/2)){
            printf("#");
            k++;
        }
        printf("\n");
    }
    return 0;
}
